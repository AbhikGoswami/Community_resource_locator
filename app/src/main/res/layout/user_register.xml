<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".user_register"
    android:background="@color/red">


    <ImageView
        android:id="@+id/icon_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_arrow_back_24"
        android:layout_marginTop="10dp"
        android:contentDescription="Register Icon"/>

    <TextView
        android:id="@+id/txtregisteryourself"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register Yourself"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_toRightOf="@id/icon_back"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/etname"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txtregisteryourself"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:hint="Name"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/etmail"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/etname"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:hint="Email address"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/etmobnum"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/etmail"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:hint="Mobile Number"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:inputType="phone"
        android:maxLines="1"
        android:maxLength="10"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/etaddress"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/etmobnum"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:hint="Address"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:maxLines="3"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/etpass"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/etaddress"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:hint="Password"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:maxLines="1"
        android:maxLength="15"
        android:inputType="textPassword"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/etconfpass"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/etpass"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:hint="Confirm Password"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:maxLines="1"
        android:maxLength="15"
        android:inputType="textPassword"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        />

    <Button
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:id="@+id/btnregister"
        android:layout_below="@id/etconfpass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Register"
        android:textSize="20sp"
        android:background="@drawable/button_shape_square"/>


</RelativeLayout>